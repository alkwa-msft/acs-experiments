{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "F1",
        "tier": "Free"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      }
    },
    {
      "type": "Microsoft.Communication/communicationServices",
      "apiVersion": "2020-08-20",
      "name": "[parameters('acsName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "dataLocation": "UnitedStates"
      }
    },
    {
      "type": "Microsoft.EventGrid/topics",
      "apiVersion": "2021-06-01-preview",
      "name": "[parameters('eventGridTopicName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Communication/communicationServices', parameters('acsName'))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "uploadBuild",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ],
      "properties": {
        "azCliVersion": "2.0.80",
        "scriptContent": "[concat('az webapp deployment source config-zip --resource-group ', resourceGroup().name, ' --name ', parameters('appName'), ' --src build.zip')]",
        "timeout": "PT30M",
        "cleanupPreference": "OnSuccess",
        "retentionInterval": "P1D",
        "forceUpdateTag": "[newGuid()]"
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "setAcsConnectionString",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Communication/communicationServices', parameters('acsName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ],
      "properties": {
        "azCliVersion": "2.0.80",
        "scriptContent": "[concat('az webapp config appsettings set --resource-group ', resourceGroup().name, ' --name ', parameters('appName'), ' --settings resourceConnectionString=', listKeys(resourceId('Microsoft.Communication/communicationServices', parameters('acsName')), '2020-08-20').primaryConnectionString)]",
        "timeout": "PT30M",
        "cleanupPreference": "OnSuccess",
        "retentionInterval": "P1D",
        "forceUpdateTag": "[newGuid()]"
      }
    },
    {
      "type": "Microsoft.EventGrid/eventSubscriptions",
      "apiVersion": "2021-06-01-preview",
      "name": "[parameters('eventSubscriptionName')]",
      "dependsOn": [
        "[resourceId('Microsoft.EventGrid/topics', parameters('eventGridTopicName'))]",
        "[resourceId('Microsoft.Resources/deploymentScripts', 'uploadBuild')]",
        "[resourceId('Microsoft.Resources/deploymentScripts', 'setAcsConnectionString')]"
      ],
      "properties": {
        "destination": {
          "endpointType": "WebHook",
          "properties": {
            "endpointUrl": "[parameters('webhookEndpointUrl')]"
          }
        },
        "filter": {
          "includedEventTypes": null
        }
      }
    }
  ],
  "parameters": {
    "appServicePlanName": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    },
    "acsName": {
      "type": "string"
    },
    "eventGridTopicName": {
      "type": "string"
    },
    "eventSubscriptionName": {
      "type": "string"
    },
    "webhookEndpointUrl": {
      "type": "string"
    }
  }
}